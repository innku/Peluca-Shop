<%= form_for(@wig) do |f| %>
  <% if @wig.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@wig.errors.count, "error prohibio", 'errores prohibieron') %> tu peluca:</h2>

      <ul>
      <% @wig.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :color %> *<br />
    <%= f.select :color, Wig::COLOR, :include_blank => true%>
  </div>
  <div class="field">
